<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matrixxun.immersivedetail.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ImmersiveMainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ImmersiveDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBarTransparentStatusBar">
        </activity>
        <activity
            android:name=".ImmersiveDetailFragmentActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBarTransparentStatusBar">
        </activity>
    </application>

</manifest>